                                        <tr>
                                            <td>@item.FoodId</td>
                                            <td>
                                                <img class="flex-shrink-0 img-fluid rounded" src="~/img/MenuFood/@item.Img" alt=""
                                                     style="width: 100px; height:100px;">
                                            </td>
                                            <td>@item.FoodName</td>
                                            <td>@item.Price</td>
                                            @if (item.KindFood == TypeFood.WaterDish)
