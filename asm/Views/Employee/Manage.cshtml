                                                     style="width: 100px; height:100px;">
                                            </td>
                                            <td>@item.FoodName</td>
                                            <td>@item.Price</td>
                                            @if (item.KindFood == TypeFood.WaterDish)
                                            {
                                                <td>Nước</td>
                                            }
                                            else if (item.KindFood == TypeFood.Combo)
                                            {
                                                <td>Combo</td>
